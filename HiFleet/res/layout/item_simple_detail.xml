<?xml version="1.0" encoding="utf-8"?>
<com.e.common.widget.effect.layout.EffectColorRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/effectRelativeLayout_details"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:effectColor_bgNormalColor="@color/white"
    app:effectColor_bgPressedColor="@color/c_cccccc" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dip"
        android:layout_marginLeft="10dip"
        android:layout_marginTop="5dip"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/text_ship_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="船名:"
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/text_ship_mmsi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MMSI:"
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/text_ship_imo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="IMO:"
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/text_ship_call_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="呼号:"
            android:textColor="#000000"
            android:textSize="16sp" />
    </LinearLayout>

    <include layout="@layout/include_arrow_right" />

</com.e.common.widget.effect.layout.EffectColorRelativeLayout>