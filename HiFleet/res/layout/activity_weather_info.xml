<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <include layout="@layout/include_nav" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_dp_10"
                android:layout_marginTop="@dimen/size_dp_10"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="名称："
                    android:textColor="@color/black"
                    android:textSize="@dimen/size_sp_16" />

                <TextView
                    android:id="@+id/ship_name"
                    android:layout_width="160dip"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/size_sp_16" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_dp_10"
                android:layout_marginTop="@dimen/size_dp_5"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MMSI"
                    android:textColor="@color/black"
                    android:textSize="@dimen/size_sp_16" />

                <TextView
                    android:id="@+id/ship_mmsi"
                    android:layout_width="160dip"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/size_sp_16" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_dp_10"
                android:layout_marginTop="@dimen/size_dp_5"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="IMO"
                    android:textColor="@color/black"
                    android:textSize="@dimen/size_sp_16" />

                <TextView
                    android:id="@+id/ship_imo"
                    android:layout_width="160dip"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/size_sp_16" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_dp_10"
                android:layout_marginTop="@dimen/size_dp_5"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/shipb11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="经度"
                    android:textColor="@color/black"
                    android:textSize="@dimen/size_sp_16" />

                <TextView
                    android:id="@+id/ship_lo"
                    android:layout_width="160dip"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/size_sp_16" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_dp_10"
                android:layout_marginTop="@dimen/size_dp_5"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="纬度"
                    android:textColor="@color/black"
                    android:textSize="@dimen/size_sp_16" />

                <TextView
                    android:id="@+id/ship_la"
                    android:layout_width="160dip"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/size_sp_16" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_dp_10"
                android:layout_marginTop="@dimen/size_dp_5"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="航向"
                    android:textColor="@color/black"
                    android:textSize="@dimen/size_sp_16" />

                <TextView
                    android:id="@+id/ship_course"
                    android:layout_width="160dip"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/size_sp_16" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_dp_10"
                android:layout_marginTop="@dimen/size_dp_5"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="航速"
                    android:textColor="@color/black"
                    android:textSize="@dimen/size_sp_16" />

                <TextView
                    android:id="@+id/ship_speed"
                    android:layout_width="160dip"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/size_sp_16" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_dp_10"
                android:layout_marginTop="@dimen/size_dp_5"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="类型"
                    android:textColor="@color/black"
                    android:textSize="@dimen/size_sp_16" />

                <TextView
                    android:id="@+id/ship_type"
                    android:layout_width="160dip"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/size_sp_16" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_dp_10"
                android:layout_marginTop="@dimen/size_dp_5"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="状态"
                    android:textColor="@color/black"
                    android:textSize="@dimen/size_sp_16" />

                <TextView
                    android:id="@+id/ship_state"
                    android:layout_width="160dip"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/size_sp_16" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_dp_10"
                android:layout_marginTop="@dimen/size_dp_5"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="船长"
                    android:textColor="@color/black"
                    android:textSize="@dimen/size_sp_16" />

                <TextView
                    android:id="@+id/ship_length"
                    android:layout_width="160dip"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/size_sp_16" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_dp_10"
                android:layout_marginTop="@dimen/size_dp_5"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/shipe11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="船宽"
                    android:textColor="@color/black"
                    android:textSize="@dimen/size_sp_16" />

                <TextView
                    android:id="@+id/ship_width"
                    android:layout_width="160dip"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/size_sp_16" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_dp_10"
                android:layout_marginTop="@dimen/size_dp_5"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="吃水"
                    android:textColor="@color/black"
                    android:textSize="@dimen/size_sp_16" />

                <TextView
                    android:id="@+id/ship_waterline"
                    android:layout_width="160dip"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/size_sp_16" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_dp_10"
                android:layout_marginTop="@dimen/size_dp_5"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="目的地"
                    android:textColor="@color/black"
                    android:textSize="@dimen/size_sp_16" />

                <TextView
                    android:id="@+id/ship_destination"
                    android:layout_width="160dip"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/size_sp_16" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_dp_10"
                android:layout_marginTop="@dimen/size_dp_5"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ETA"
                    android:textColor="@color/black"
                    android:textSize="@dimen/size_sp_16" />

                <TextView
                    android:id="@+id/ship_eta"
                    android:layout_width="160dip"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/size_sp_16" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_dp_10"
                android:layout_marginTop="@dimen/size_dp_5"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="更新时间"
                    android:textColor="@color/black"
                    android:textSize="@dimen/size_sp_16" />

                <TextView
                    android:singleLine="true"
                    android:id="@+id/ship_finish_time"
                    android:layout_width="160dip"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/size_sp_16" />
            </RelativeLayout>

            <com.e.common.widget.effect.button.EffectColorButton
                android:id="@+id/btn_start_time"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_dp_50"
                android:layout_marginLeft="@dimen/size_dp_25"
                android:layout_marginRight="@dimen/size_dp_25"
                android:layout_marginTop="@dimen/size_dp_10"
                android:gravity="center"
                android:onClick="onClick"
                android:text="请选择轨迹起始时间"
                android:textColor="@android:color/white"
                android:textSize="@dimen/size_sp_22"
                app:effectColor_bgNormalColor="#0164ca"
                app:effectColor_bgPressedColor="#024c96"
                app:effectColor_radius="@dimen/size_dp_5" />

            <com.e.common.widget.effect.button.EffectColorButton
                android:id="@+id/btn_end_time"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_dp_50"
                android:layout_marginLeft="@dimen/size_dp_25"
                android:layout_marginRight="@dimen/size_dp_25"
                android:layout_marginTop="@dimen/size_dp_10"
                android:gravity="center"
                android:onClick="onClick"
                android:text="请选择轨迹终止时间"
                android:textColor="@android:color/white"
                android:textSize="@dimen/size_sp_22"
                app:effectColor_bgNormalColor="#0164ca"
                app:effectColor_bgPressedColor="#024c96"
                app:effectColor_radius="@dimen/size_dp_5" />

            <com.e.common.widget.effect.button.EffectColorButton
                android:id="@+id/btn_guiji"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_dp_50"
                android:layout_marginBottom="20dip"
                android:layout_marginLeft="@dimen/size_dp_25"
                android:layout_marginRight="@dimen/size_dp_25"
                android:layout_marginTop="@dimen/size_dp_10"
                android:gravity="center"
                android:onClick="onClick"
                android:text="显示轨迹"
                android:textColor="@android:color/white"
                android:textSize="@dimen/size_sp_22"
                app:effectColor_bgNormalColor="#0164ca"
                app:effectColor_bgPressedColor="#024c96"
                app:effectColor_radius="@dimen/size_dp_5" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>