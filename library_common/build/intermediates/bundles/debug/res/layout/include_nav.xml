<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_nav"
    android:layout_width="match_parent"
    android:layout_height="@dimen/size_dp_50"
    android:layout_alignParentTop="true"
    android:background="@color/nav_bg" >

    <include layout="@layout/include_btn_left" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/text_nav"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/normal_color"
            android:textSize="@dimen/size_sp_22" />

        <TextView
            android:id="@+id/text_backup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="@dimen/size_sp_17"
            android:visibility="gone" />
    </LinearLayout>

    <include layout="@layout/include_btn_right" />

</RelativeLayout>